@using Recodme.RD.Lennyouse.PresentationLayer.WebAPI.Models.MenuInfo

@model IEnumerable<MealViewModel>

<h2>Dietary Restrictions</h2>

<p>
    <a asp-action="Create">Create</a>
</p>

<div class="table-responsive">
    <table claa="table">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.StartingHours)</th>
                <th>@Html.DisplayNameFor(model => model.EndingHours)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var meal in Model)
            {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@meal.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@meal.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@meal.Id">Delete</a>
                </td>
                <td>@Html.DisplayFor(x => meal.Name)</td>
                <td>@Html.DisplayFor(x => meal.StartingHours)</td>
                <td>@Html.DisplayFor(x => meal.EndingHours)</td>
            </tr>
            }
        </tbody>

    </table>

</div>
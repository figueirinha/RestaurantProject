@using Recodme.RD.Lennyouse.PresentationLayer.WebAPI.Models.RestaurantInfo

@model RestaurantViewModel

@{
    ViewBag.Title = "Update";
}

<h2>Restaurant - @Model.Name</h2>
<br />
<div class="row">
    <form asp-action="Edit" class="pl-4">
        <div asp-validation-summary="ModelOnly" class="=" text-danger></div>
        <div class="form-group">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenningHours" class="control-label"></label>
                <input asp-for="OpenningHours" class="form-control" />
                <span asp-validation-for="OpenningHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosingHours" class="control-label"></label>
                <input asp-for="ClosingHours" class="form-control" />
                <span asp-validation-for="ClosingHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosingDays" class="control-label"></label>
                <input asp-for="ClosingDays" class="form-control" />
                <span asp-validation-for="ClosingDays" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="TableCount" class="control-label"></label>
                    <input asp-for="TableCount" class="form-control" />
                    <span asp-validation-for="TableCount" class="text-danger"></span>
                </div>
            </div>
            @Html.Hidden("Id", Model.Id)
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
</form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

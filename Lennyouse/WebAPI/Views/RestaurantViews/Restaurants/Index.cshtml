@using Recodme.RD.Lennyouse.PresentationLayer.WebAPI.Models.RestaurantInfo

@model IEnumerable<RestaurantViewModel>

<h2>Restaurants</h2>

<p>
    <a asp-action="Create">Create</a>
</p>

<div class="table-responsive">
    <table claa="table">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.OpenningHours)</th>
                <th>@Html.DisplayNameFor(model => model.ClosingHours)</th>
                <th>@Html.DisplayNameFor(model => model.ClosingDays)</th>
                <th>@Html.DisplayNameFor(model => model.TableCount)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var restaurant in Model)
            {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@restaurant.Id">Edit</a>
                    <a asp-action="Details" asp-route-id="@restaurant.Id">Details</a>
                    <a asp-action="Delete" asp-route-id="@restaurant.Id">Delete</a>
                </td>
                <td>@Html.DisplayFor(x => restaurant.Name)</td>
                <td>@Html.DisplayFor(x => restaurant.Address)</td>
                <td>@Html.DisplayFor(x => restaurant.OpenningHours)</td>
                <td>@Html.DisplayFor(x => restaurant.ClosingHours)</td>
                <td>@Html.DisplayFor(x => restaurant.ClosingDays)</td>
                <td>@Html.DisplayFor(x => restaurant.TableCount)</td>
            </tr>
            }
        </tbody>

    </table>

</div>